doctype html
html(lang='en')
  head
    title Bootstrap Example
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
  body
    .container
      .row
        .col-md-6.col-md-offset-3
          h2 Add project
          hr
          form(method='post', action='/add')
            .form-group
              label Project name:
              input#text.form-control(type='text', placeholder='Enter project name', name="project_name")
            .form-group
              label(for='text') Description:
              textarea.form-control(style='resize: none;', rows='5', placeholder='Describe your project', name="description")
            .form-group
              label(for='text') URL address:
              input#text.form-control(type='text', placeholder='Enter your site url', name='url_site')
            .form-group
              label(for='text') API url address:
              input#text.form-control(type='text', placeholder='Enter your api url (http://example.com/api)', name='url_api')
            .form-group
              label(for='email') Email:
              input#email.form-control(type='email', placeholder='Enter your email', name='email')
            button.btn.btn-primary(type='submit') Submit
